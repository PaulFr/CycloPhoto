{% extends '::header.html.twig' %}
{% block title %}Administration - Photos{% endblock %}
{% block main_title %}
    <header>
        <div class="wrapper">
            <h1 class="title">Liste des photos</h1>
        </div>
    </header>
{% endblock %}
{% block content %}
    <div id="content">
        <div class="wrapper">

            <table class="records_list" style="width:100%;">
        <thead>
        <tr>
            <th>Id</th>
            <th>Course</th>
            <th>Coureur</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><!--<a href="{{ path('admin_photo_show', { 'id': entity.id }) }}">{{ entity.id }}</a>-->
                    <img src="{{ (entity.id~'.jpg') | imagine_filter('my_thumb') }}" alt=""/>
                </td>
                <td>{{ entity.course }}</td>
                <td>{{ entity.personne }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_photo_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_photo_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            <div class="navigation">
                {{ knp_pagination_render(entities) }}
            </div>

            <a class="button" href="{{ path('admin_photo_new') }}">
                Ajouter des photos
            </a>
        </div>
    </div>
{% endblock %}
