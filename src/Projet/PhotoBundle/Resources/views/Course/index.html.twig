{% extends '::header.html.twig' %}
{% block title %}Administration - Courses{% endblock %}
{% block main_title %}
    <header>
        <div class="wrapper">
            <h1 class="title">Liste des courses</h1>
        </div>
    </header>
{% endblock %}
{% block content %}
    <div id="content">
        <div class="wrapper">

            <table class="records_list" style="width:100%;">
        <thead>
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Prix Photo TTC</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_course_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nomCourse }}</td>
                <td>{{ entity.prixPhotoTTC }}</td>
                <td>{% if entity.dateCourse %}{{ entity.dateCourse|date('d/m/Y') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_course_show', { 'id': entity.id }) }}">Voir</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_course_edit', { 'id': entity.id }) }}">Editer</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

            <a class="button" href="{{ path('admin_course_new') }}">
                Ajouter une nouvelle course
            </a>
        </div>
    </div>
{% endblock %}
