{% extends '::header.html.twig' %}
{% block title %}Administration - Courses{% endblock %}
{% block main_title %}
    <header>
        <div class="wrapper">
            <h1 class="title">Voir une course</h1>
        </div>
    </header>
{% endblock %}
{% block content %}
    <div id="content">
        <div class="wrapper">

    <table class="record_properties">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ entity.nomCourse }}</td>
        </tr>
        <tr>
            <th>Prix Photo TTC</th>
            <td>{{ entity.prixPhotoTTC }}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ entity.dateCourse|date('Y-m-d H:i:s') }}</td>
        </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('admin_course') }}">
                Retour Ã  la liste
            </a>
        </li>
        <li>
            <a href="{{ path('admin_course_edit', { 'id': entity.id }) }}">
                Editer
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
        </div>
    </div>
{% endblock %}
