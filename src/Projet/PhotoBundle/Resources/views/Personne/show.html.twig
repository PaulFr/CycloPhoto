{% extends '::header.html.twig' %}
{% block title %}Administration - Courses{% endblock %}
{% block main_title %}
    <header>
        <div class="wrapper">
            <h1 class="title">{{ entity.prenom }} {{ entity.nom }}</h1>
        </div>
    </header>
{% endblock %}
{% block content %}
    <div id="content">
        <div class="wrapper">
            <table class="record_properties">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ entity.nom }}</td>
                </tr>
                <tr>
                    <th>Prenom</th>
                    <td>{{ entity.prenom }}</td>
                </tr>
                <tr>
                    <th>Adresse</th>
                    <td>{{ entity.adresse }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ entity.email }}</td>
                </tr>
                <tr>
                    <th>Date de naissance</th>
                    <td>{{ entity.dateNaissance|date('d/m/Y') }}</td>
                </tr>
                </tbody>
            </table>

            <ul class="record_actions">
                <li>
                    <a href="{{ path('admin_personne') }}">
                        Back to the list
                    </a>
                </li>
                <li>
                    <a href="{{ path('admin_personne_edit', { 'id': entity.id }) }}">
                        Edit
                    </a>
                </li>
                <li>{{ form(delete_form) }}</li>
            </ul>
        </div>
    </div>
{% endblock %}
