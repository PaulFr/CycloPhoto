{% extends '::header.html.twig' %}
{% block title %}{{ parent() }} - Votre panier{% endblock %}
{% block main_title %}
    <header>
        <div class="wrapper">
            <h1 class="title"><i class="fa fa-shopping-cart"></i> Votre Panier</h1>
        </div>
    </header>
{% endblock %}

{% block content %}
    <div id="content">
        <div class="wrapper">
            <div class="blockEntete">
                <p> Votre panier contient {{ panier.nombreProduit }} produit</p>
            </div>
            <div class="blockProduits">
                {% set cpt = 0 %}
                {% for produit in panier.produits %}
                    <div class="blockProduit">
                        {% set cpt = cpt+1 %}
                        <img src="{{ produit }}" class="imageProduit"/>

                        <p class="nomProduit">nom {{ produit }}</p>

                        <p class="prixProduit">prix {{ produit }}</p>
                        <img src="{{ asset('bundles/projetphoto/images/suprimer.gif') }}"
                             class="boutonSupprimer"/>
                    </div>
                    {% if cpt < panier.nombreProduit %}
                        <div class="delimiteur"></div>
                    {% endif %}
                {% endfor %}
            </div>
            <div class="blockTotal">
                <p class="textePrixTotal"> Total : {{ panier.prixTotal }}â‚¬ </p>

                <div class="boutonPasserCommande"> Passer Commande</div>
            </div>
        </div>
    </div>
{% endblock %}